<header class="cabecera">
  <nav class="nav">
    <a id="logo" href="/"><img src="/recursos/imagenes/logo.svg" alt="logo wooplance" />
    </a>

    <div class="grupo_buscar">
      <div class="grupo_categorias">

        <button class="uk-button uk-button-default item_cat" type="button">Categorias</button>
        <div uk-dropdown="mode: click">
          <ul class="uk-nav uk-dropdown-nav">
            <% categorias.forEach(category => { %>
            <li><a href="/categories/<%= category.id %> "><%= category.category %> </a></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="grupo_busqueda">
        <form action="/search" method="GET">
          <input id="input_buscar" type="text" name="search" placeholder="EJ: 'Web Developer' " />
          <button id="btn_buscar" type="submit">
            <i class="bx bx-search"></i>
          </button>
        </form>
      </div>
    </div>

    <div class="grupo_entrar">
      <a href="/login" id="btn_iniciarsesion">Iniciar Sesi√≥n</a>
      <a href="/register" id="btn_registrarse" onclick="openRegisterForm()">
        Registrarse
      </a>
    </div>
  </nav>
  <div class="sideBar">
    <div class="circles"><i class="bx bx-qr"></i></div>
    <div class="circles"><i class="bx bxs-bar-chart-alt-2"></i></div>
    <div class="circles"><i class="bx bx-grid"></i></div>
    <div class="circles">
      <a href="/login"><i class="bx bx-user"></i></a>
    </div>
  </div>
  <div id="categoriesContainer" hidden>
    <i class="bx bx-x" uk-toggle="target: #categoriesContainer "></i>
  </div>
</header>